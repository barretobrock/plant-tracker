{% import 'macros/form.jinja' as f %}
{% import 'macros/svg.jinja' as s %}
{% extends 'base.jinja' %}
{% block head %}
    {{ super() }}
{% endblock %}
{% block content %}

    {% set data_rows = [
        ['species'],
        ['plant_source', 'date_planted'],
        ['is_drip_irrigated', 'is_in_container', 'is_dead'],
        ['shape_type'],
        ['geodata'],
        ['notes']
    ] %}


    {% call f.render_form(form, data_rows, post_endpoint_url) %}
        {{ 'Edit' if is_edit else 'Add' }} a plant
    {% endcall %}

    <div class="scrollable-map">
        {% call s.render_input_map(map_points) %}

        {% endcall %}
    </div>

{% endblock %}
